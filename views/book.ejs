<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>book</title>
    <!-- Custom CSS Link... -->
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/footer.css">
    <link rel="icon" href="/img/images/fav1.png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>


    <!-- Font Awesome Link... -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="icon" href="/img/images/fav1.png">

    <style>
        body {
            margin-top: 5%;
        }

        a {
            text-decoration: none;
        }

        .log-alert {
            height: 50px;
            width: 450px;
            background-color: rgba(255, 0, 0, 0.828) !important;
            color: white !important;
            margin-top: 10px;
            margin-left: auto;
            margin-right: auto;
            margin-bottom: 3px;
            padding: 10px 10px;
            font-size: 14px;
            text-align: center;
            font-weight: bold;
            border: none !important;
        }
    </style>
</head>

<body>
    <%- include('navbar'); %>
        <!-- Header Section Ends here... -->
        <!-- Booking Section -->

        <section class="book" id="book">

            <h1 class="heading">
                <span>b</span>
                <span>o</span>
                <span>o</span>
                <span>k</span>
                <span class="space"></span>
                <span>n</span>
                <span>o</span>
                <span>w</span>
            </h1>

            <div class="row">

                <div class="image">
                    <img src="/img/images/booking.jpeg" alt="">
                </div>

                <form action="/book/book/<%=locals.user.username%>" method="post">
                    <% if(locals.errors !=null) {%>
                        <% errors.forEach(function(error) { %>
                            <div class="alert alert-danger log-alert" id="msg">
                                <strong>Error! </strong>
                                <%=error.msg%>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                            <% }); %>
                                <% } %>
                                    <div class="inputBox">
                                        <h3>FROM</h3>
                                        <input type="text" name="from" placeholder="Enter your place" required>
                                    </div>
                                    <div class="inputBox">
                                        <h3>TO</h3>
                                        <input type="text" name="dest" placeholder="Enter a Destination" required>
                                    </div>
                                    <div class="inputBox">
                                        <h3>number of adults</h3>
                                        <input type="number" name="adult" value="1" placeholder="number of members"
                                            min="1" max="15" required>
                                        <h3>number of children</h3>
                                        <input type="number" name="child" value="0" placeholder="number of members"
                                            min="0" max="10">
                                    </div>

                                    <table class="inputBox">
                                        <div class="arrival">
                                            <th>
                                                <h3>Departure</h3>
                                                <input type="date" name="date1" id="dd" min="">
                                            </th>
                                            <th>
                                                <h3>Arrival</h3>
                                                <input type="date" name="date2" id="ad" min="">
                                            </th>
                                        </div>
                                    </table>
                                    <!-- <a href="/payment/payment/<%=user.email%>" class="btn">Book Now</a> -->
                                    <input type="submit" class="book-btn" value="book now">

                                    <!-- <input type="submit" class="book-btn" value="book now"> -->

                </form>

            </div>

        </section>

        <%- include('footer'); %>
            <script src="/js/book.js"></script>
</body>

</html>